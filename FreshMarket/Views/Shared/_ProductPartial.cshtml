@model ProductServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>Address: <b>@Model.Address</b></h6>
            <h6>
                Price Per Month:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <h6>(@(Model.IsBuyer ? "Sold" : "For sale"))</h6>
            <br />

            @if (this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">View Product</a>
                
            }
            @if (!this.User.Identity.IsAuthenticated)
            {

                <a class="btn btn-success" asp-area="Identity" asp-page="/Account/Register">View</a>
                
            }
           
